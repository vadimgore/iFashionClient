<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="50px"
        android:textColor="@color/red"
        android:textSize="70px" >
    </TextView>
    <TextView
        android:id="@+id/customer_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="50px"
        android:textColor="@color/blue"
        android:textSize="70px" >
    </TextView>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">

        <ImageView
            android:id="@+id/custom_profile_image"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:src="@drawable/customer_profile"
            android:scaleType="center">
        </ImageView>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/customer_profile"
                android:gravity="left"
                android:textSize="60px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black">
            </TextView>
            <TextView
                android:id="@+id/customer_style"
                android:gravity="left"
                android:textSize="60px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/recent_purchases"
        android:gravity="center_horizontal"
        android:layout_marginTop="50px"
        android:textSize="70px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/blue">
    </TextView>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item1_name"
            android:gravity="left"
            android:textSize="50px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black">
        </TextView>
        <TextView
            android:id="@+id/item1_brand"
            android:gravity="left"
            android:textSize="50px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black">
        </TextView>
        <TextView
            android:id="@+id/item1_price"
            android:gravity="left"
            android:textSize="50px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black">
        </TextView>
        <TextView
            android:id="@+id/item1_date"
            android:gravity="left"
            android:textSize="50px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black">
        </TextView>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item2_name"
            android:gravity="left"
            android:textSize="50px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black">
        </TextView>
        <TextView
            android:id="@+id/item2_brand"
            android:gravity="left"
            android:textSize="50px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black">
        </TextView>
        <TextView
            android:id="@+id/item2_price"
            android:gravity="left"
            android:textSize="50px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black">
        </TextView>
        <TextView
            android:id="@+id/item2_date"
            android:gravity="left"
            android:textSize="50px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black">
        </TextView>
    </LinearLayout>
    </LinearLayout>